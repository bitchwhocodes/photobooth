extends layout
block content
	div.idle.container.hide
		h2 Idle screen
		ul.images
			each val in urls
				li
					img(src=val)
	div.activate.hide.section
		h2 Hello. Take your photo?
		button(name="photo") Let's do it!
		
	
	div.container.countdown-container.hide
		h2 Photo Countdown
		div.countdown
			p.number.fadeUp 3
			img.hide(src='images/camera.png')

		p.click-text.hide SAY CHEESE


	div.container.email.show
		h2 Review Email
		img.showimage
		div.pick
			input(type="email")
			button(name="email") Email
		div.progress
		div.message
			p There was an error



